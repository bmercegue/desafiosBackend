<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h2 style="color:crimson;">Historial productos</h2>
            <% const showProducts = products.length > 0; %>
            <% if(showProducts){ %>
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;">
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto URL</th>
                    </tr>
                    <% for (const product of products) {%>
                    <tr>
                        <td>
                            <%=product.title%>
                        </td>
                        <td>
                            <%=product.price%>
                        </td>
                        <td>
                            <%=product.thumbnail%>
                            <img src="<%=product.thumbnail%>" width="40" height="40">
                        </td>
                    </tr>
                    <%};%>
                </table>
                <a class="btn btn-success mt-3 mb-5" href="/products">Volver</a>
            </div>
            <% } else{ %>
            <h3 class="alert alert-danger">no se encontraron productos</h3>
                <% } %>

</body>
</html>